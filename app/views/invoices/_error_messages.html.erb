<% if notice %>
  <div class="alert alert-success" role="alert">
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close">
    </button>
    <%= notice %>
  </div>
<% end %>
<% if alert %>
  <div class="alert alert-danger" role="alert">
    <button type="button" class="btn-close float-end" data-bs-dismiss="alert" aria-label="Close">
    </button>
    <%= alert %>
  </div>
<% end %>