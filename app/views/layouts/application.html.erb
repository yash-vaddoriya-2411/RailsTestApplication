<!DOCTYPE html>
<html>
<head>
  <title>Rails App</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag "application", media: "all" %>
  <%= javascript_importmap_tags %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/webcamjs/1.0.26/webcam.min.js"></script>
</head>
<body>

  <div class="navbar navbar-light" data-bs-theme="light">
  <div class="container-fluid">
    <%= link_to "Capture", new_invoice_path, class: "nav-link col-xxl-3" %>
    <%= link_to "Checks", checks_path, class: "nav-link col-xxl-3" %>
    <%= link_to "Invoices", invoices_path, class: "nav-link col-xxl-3" %>
    <%= link_to "Companies", companies_path, class: "nav-link col-xxl-3" %>
    </div>
  </div>
  <% flash.each do |type, message| %>
      <p style="color: <%= type == 'notice' ? 'green' : 'red' %>; font-weight: bold;">
        <%= message %>
      </p>
  <% end %>

<!-- Page Content -->
  <div class="container ">
    <%= yield %>
  </div>
</body>
</html>
